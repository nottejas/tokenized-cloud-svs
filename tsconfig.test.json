{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "types": ["mocha", "chai", "node"],
    "noEmit": false,
    "outDir": "./dist"
  },
  "include": [
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "app/**/*",
    ".next/**/*"
  ]
}
